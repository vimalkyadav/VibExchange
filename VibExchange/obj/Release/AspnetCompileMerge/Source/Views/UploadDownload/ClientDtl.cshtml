    {
        @*@Html.AntiForgeryToken()*@

        <div class="form-horizontal">
            <h2>Please Enter Your detail. </h2>


            @Html.ValidationSummary(true)


            <div class="form-group">
                @Html.LabelFor(model => model.NoOfPoints, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.NoOfPoints, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.NoOfPoints)
                </div>
            </div>
            <div class="form-group ">
