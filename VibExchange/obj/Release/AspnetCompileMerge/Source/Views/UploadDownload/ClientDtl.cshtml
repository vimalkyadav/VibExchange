                   new SelectListItem{ Text="Analytical", Value = "Analytical"}
                 }, "Select Analysis Type ", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.AnalysisMethod, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Amount, new { @class = "control-label col-md-2", @readOnly = "True" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Amount, new { @class = "form-control", @readOnly = "True" })
                    @Html.ValidationMessageFor(model => model.Amount)
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @*<div class="btn btn-default">
