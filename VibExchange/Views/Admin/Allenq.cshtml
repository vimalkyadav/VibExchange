@model IEnumerable<VibExchange.Models.Enquiry>

@{
    ViewBag.Title = "Allenq";
    Layout = "~/Views/Shared/_VibExchangeLayout.cshtml";



    WebGrid webGrid = new WebGrid(Model, canPage: true, rowsPerPage: 100, selectionFieldName: "selectedRow", ajaxUpdateContainerId: "gridContent");
    webGrid.Pager(WebGridPagerModes.All);

}

<style type="text/css">
    body {
        font-family: Arial;
        font-size: 10pt;
    }

    .Grid {
        border: 1px solid #ccc;
        border-collapse: collapse;
    }

        .Grid th {
            background-color: #F7F7F7;
            font-weight: bold;
        }

        .Grid th, .Grid td {
            padding: 5px;
            border: 1px solid #ccc;
        }

        .Grid, .Grid table td {
            border: 0px solid #ccc;
        }

            .Grid th a, .Grid th a:visited {
                color: #333;
            }
</style>
<div>
    @webGrid.GetHtml(
        htmlAttributes: new { @id = "WebGrid", @class = "Grid" },
        columns: webGrid.Columns(
                                                webGrid.Column("EnquiryID", "EnquiryID"),
                                                webGrid.Column("Enq_Category", "Enquiry Category"),
                                                webGrid.Column("UserName", "UserName"),
                                                webGrid.Column("Enq_Subject", "Enquiry Subject"),
                                                webGrid.Column("EnquiryDetail1", "Enquiry Detail"),
                                                        webGrid.Column("Enq_CreateDate", "Create Date"),
                                                webGrid.Column("Enquiry_Cost", "Enquiry Cost"),

                                                webGrid.Column("Buyer_Name", "Buyer Name"),
                                                webGrid.Column("DateOfBuying", "Date Of Buying"),

         webGrid.Column(header: "Action", format: @<text>@Html.ActionLink("Select", null, null, new { @onclick = "return GetSelectedRow(this);" })</text>)

                                                                      ))
</div>
